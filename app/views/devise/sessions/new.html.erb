
<div class="ui middle aligned center aligned grid">
  <div class="column">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "ui large form error") do |f| %>
      <div class="ui stacked segment">
        <h2 class="ui header left aligned"> Welcome to T2 ! </h2>
        <div class="field">
          <% f.label :email %>
          <div class="ui left icon input">
            <i class="user icon"></i>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email Address" %>
          </div>
        </div>

        <div class="field">
          <% f.label :password %>
          <div class="ui left icon input">
              <i class="lock icon"></i>
              <%= f.password_field :password, autocomplete: "off", placeholder: "Password" %>
          </div>
        </div>

        <% if devise_mapping.rememberable? -%>
          <div class="ui message field left aligned">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end -%>
        <%= f.submit "Log in", class: "fluid ui secondary large button" %>
        <div class="ui message field">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
